
@model SMS.BLL.Models.ViewModels.UserDto
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/CustomCSS/Registration.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <form asp-action="RegisterUser" asp-controller="Auth">
        <div class="Container">
            <h1>Register</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>

            <p class="text-danger"><strong>@TempData["Error"]</strong></p>

            <label asp-for="FirstName"><b>First name</b></label>
            <input type="text" placeholder="Enter first name" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>

            <label asp-for="LastName"><b>Last name</b></label>
            <input type="text" placeholder="Enter last name" asp-for="LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>

            <label asp-for="EmailAddress"><b>Email address</b></label>
            <input type="text" placeholder="Enter email address" asp-for="EmailAddress">
            <span asp-validation-for="EmailAddress" class="text-danger"></span>

            <label asp-for="Password"><b>Password</b></label>
            <input type="password" placeholder="Enter password" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>

            <hr>
            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>

            <button type="submit" class="btn btn-primary">Register</button>
            <hr />

            <div class="container">
                <p>Already have an account? <a asp-area="Authentication" asp-controller="Auth" asp-action="SignIn">Sign in</a>.</p>
            </div>
        </div>
    </form>

</body>
</html>
