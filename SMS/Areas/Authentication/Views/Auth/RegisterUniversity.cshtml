@model SMS.BLL.Models.ViewModels.UniversityDto
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/CustomCSS/Registration.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <form asp-action="RegisterUniversity" asp-controller="Auth">
        <div class="Container">
            <h1>Register</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>

            <p class="text-danger"><strong>@TempData["Error"]</strong></p>

            <label asp-for="Name"><b>Name</b></label>
            <input type="text" placeholder="Enter university name" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>

            <label asp-for="NumberOfStudents"><b>Number of Students</b></label>
            <input type="text" placeholder="Enter number of students" asp-for="NumberOfStudents">
            <span asp-validation-for="NumberOfStudents" class="text-danger"></span>

            <label asp-for="Location"><b>Country</b></label>
            <input type="text" placeholder="Enter country" asp-for="Location">
            <span asp-validation-for="Location" class="text-danger"></span>

            <hr>
            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>

            <button type="submit" class="btn btn-primary">Register</button>
            <hr />
        
            <div class="container">
                <p>Already have an account? <a asp-area="Authentication" asp-controller="Auth" asp-action="SignIn">Sign in</a>.</p>
            </div>
        </div>
    </form>

</body>
</html>